<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
>

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
<RelativeLayout
android:id="@+id/lyt_checked"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

<ImageView
    android:id="@+id/flag"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    android:layout_width="100dp"
    android:visibility="visible"
    android:layout_height="100dp" />

</RelativeLayout>>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/capitalcontainer"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/labelcapital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="8dp"
                android:text="Capital : "
                android:layout_below="@+id/name"/>
        <TextView
            android:id="@+id/capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/name"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/regionContainer"
            android:layout_width="match_parent"
            android:layout_below="@id/capitalcontainer"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            android:text="Region : "
            android:layout_below="@+id/name"/>
        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/capitalcontainer"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/subregionContainer"
            android:layout_width="match_parent"
            android:layout_below="@id/regionContainer"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelSubRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            android:text="SubRegion : "
            android:layout_below="@+id/name"/>
        <TextView
            android:id="@+id/subregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/region"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/populationContainer"
            android:layout_width="match_parent"
            android:layout_below="@id/subregionContainer"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            android:text="Population : "
            android:layout_below="@+id/name"/>
        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/subregion"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bordersContainer"
            android:layout_width="match_parent"
            android:layout_below="@id/populationContainer"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/labelBordersContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            android:text="Borders  : "
            android:layout_below="@+id/name"/>

            <TextView
            android:id="@+id/borders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/population"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LanguagesContainer"
            android:layout_width="match_parent"
            android:layout_below="@id/bordersContainer"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/labelLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            android:text="Languages : "
            android:layout_below="@+id/name"/>
        <TextView
            android:id="@+id/languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/borders"
            />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>